  "description": "All popular music platforms in one.",
  "main": "index.js",
  "scripts": {
    "start": "electron ."
  },
  "author": {
    "name": "michadasis",
    "email": "michhbusiness@gmail.com"
},
  "license": "ISC",
  "devDependencies": {
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "electron-builder-squirrel-windows": "^24.10.0"
  },
  "dependencies": {
    "electron-context-menu": "^3.6.1"
